<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme -->
    <style name="Theme.FoodNutritionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- color keys -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- If you use MaterialComponents, this is also important for widgets like fab, snackbar -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- CardView example -->
    <style name="CardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- title Style -->
    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- subtitle style -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Nutrition Label -->
    <style name="NutritionLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Nutrition Value -->
    <style name="NutritionValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>

        <!-- <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item> -->
    </style>

</resources>
